{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "composite": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist/**/*",
    "test/**/*",
    "**/*.test.ts",
    "node_modules/**/*",
    "**/ts-to-zod/*.zod.ts"
  ],
  "references": [{ "path": "../core" }]
}
