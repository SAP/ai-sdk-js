{
  "type": "module",
  "name": "@sap-ai-sdk/sample-code",
  "version": "1.18.0",
  "private": "true",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map"
  ],
  "scripts": {
    "start": "node --loader ts-node/esm src/server.ts",
